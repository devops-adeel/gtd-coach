# ============================================
# GTD Coach Configuration
# ============================================

# LM Studio Configuration (Required for Coach)
# Default URL for local LM Studio instance
LM_STUDIO_URL=http://localhost:1234/v1

# ============================================
# Agent System Configuration (NEW)
# ============================================
# Control the rollout of the LangGraph agent system
USE_LANGGRAPH=false
AGENT_ROLLOUT_PCT=0
AGENT_KILL_SWITCH=false
AGENT_SHADOW_MODE=true

# ============================================
# Timing App API Configuration
# ============================================
# Get your API key from https://web.timingapp.com
# 1. Log into web.timingapp.com with your Timing account
# 2. Navigate to Settings or API Keys section
# 3. Generate a new API key
# 4. Copy the key and paste it below (remove the < > brackets)

TIMING_API_KEY=<your-timing-api-key-here>

# Optional: Minimum time threshold in minutes (default: 30)
# Only projects with more than this amount of time last week will be shown
TIMING_MIN_MINUTES=30

# ============================================
# Daily Alignment Settings (NEW)
# ============================================
# Enable automatic daily alignment checks
ENABLE_DAILY_ALIGNMENT=true

# Time to run daily alignment (24-hour format)
DAILY_ALIGNMENT_TIME=09:00

# Send notifications for alignment issues
DAILY_ALIGNMENT_NOTIFY=false

# Email address for daily reports (optional)
DAILY_ALIGNMENT_EMAIL=

# ============================================
# Optional: Langfuse Configuration
# ============================================
# For LLM observability and prompt management
# Get your keys from https://langfuse.com

LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ============================================
# Optional: Graphiti Memory Configuration
# ============================================
# For long-term memory and pattern detection
# Requires Neo4j database

NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=

# ============================================
# Coach Behavior Settings
# ============================================
# Coaching style: 'firm' or 'gentle'
COACHING_STYLE=firm

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=45

# Enable audio alerts
ENABLE_AUDIO_ALERTS=true